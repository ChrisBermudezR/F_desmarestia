	number = {7},
	journaltitle = {Parasitology Research},
	shortjournal = {Parasitol Res},
	author = {Morales-Ávila, José Raúl and Saldierna-Martínez, Ricardo Javier and Moreno-Alcántara, María and Violante-González, Juan},
	urldate = {2023-08-03},
